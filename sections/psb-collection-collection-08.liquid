      color: {{ section.settings.text_color }};
      background-color: {{ section.settings.background_color }};
      padding-top: {{ section.settings.section_padding_top }}px;
      padding-bottom: {{ section.settings.section_padding_bottom }}px;
      line-height: 1.5;
    }

    #psb-{{ section.id }} .psb-row {
      padding-left: {{ custom_row_padding_desktop }}px;
      padding-right: {{ custom_row_padding_desktop }}px;
    }

    #psb-{{ section.id }} .psb-row .image-column {
      position: relative;
      padding-left: {{ custom_column_padding_desktop }}px;
      padding-right: {{ custom_column_padding_desktop }}px;
    }

    #psb-{{ section.id }} .psb-img-wrapper {
      margin-bottom: calc( {{ custom_gutter_desktop }}px * 2 );
    }

    #psb-{{ section.id }} .psb-img-wrapper[data-index="2"] {
      padding-top: calc(50% - {{ custom_gutter_desktop }}px);
    }

    #psb-{{ section.id }} img {
      max-width: 100%;
      height: auto;
    }

    #psb-{{ section.id }} .psb-img-wrapper {
      display: block;
      position: relative;
      height: auto;
      padding-top: 100%;
      overflow: hidden;
      border-radius: 10px;
    }

    #psb-{{ section.id }} .psb-img-wrapper[data-index="1"] {
      padding-top: 100%;
    }

    #psb-{{ section.id }} .psb-img-wrapper[data-index="3"] {
      padding-top: 100%;
    }

    #psb-{{ section.id }} .psb-img-wrapper[data-index="4"] {
      padding-top: 100%;
    }

    #psb-{{ section.id }} .psb-img-wrapper:hover img {
      transform: scale(1.05);
    }

    #psb-{{ section.id }} .psb-img-wrapper img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      -o-object-fit: cover;
      object-fit: cover;
      transition: transform 0.25s;
    }

    #psb-{{ section.id }} .psb-img__title {
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      padding: 60px;
      text-align: left;
      color: {{ section.settings.collection_title_color }};
      width: 100%;
    }

    #psb-{{ section.id }} .image-column.image-column--3 .psb-img__title,
    #psb-{{ section.id }} .image-column.image-column--4 .psb-img__title {
      padding: 30px;
    }

    #psb-{{ section.id }} .psb-img__overlay {
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 100%;
      background-color: #000;
      opacity: {{ section.settings.overlay_opacity | times: 1.0 | divided_by: 100 }} ;
