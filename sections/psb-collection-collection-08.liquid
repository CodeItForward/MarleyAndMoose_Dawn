<div id="psb-{{ section.id }}" class="psb-{{ section.id }} psb-section psb-collection-collection-08" style="display: none;">
  <div class="{{ section.settings.container_width }}">
    {%- for block in section.blocks -%}
      {% case block.type %}
        {%- when 'collection' -%}
          {% liquid
            if block.settings.link_to_1 != blank
              assign wrapper_1 = 'a'
            else
              assign wrapper_1 = 'div'
            endif

            if block.settings.link_to_2 != blank
              assign wrapper_2 = 'a'
            else
              assign wrapper_2 = 'div'
            endif

            if block.settings.link_to_3 != blank
              assign wrapper_3 = 'a'
            else
              assign wrapper_3 = 'div'
            endif

            if block.settings.link_to_4 != blank
              assign wrapper_4 = 'a'
            else
              assign wrapper_4 = 'div'
            endif
          %}
          <div class="psb-row psb-block-space{% if block.settings.enable_reverse %} psb-flex-row-reverse{% endif %}" {{ block.shopify_attributes }}>
            <div class="psb-col-lg-6 image-column">
              <{{ wrapper_1 }}
                {%- if wrapper_1 == 'a' -%}
                  href="{{ block.settings.link_to_1 }}"
                {%- endif -%}
                class="psb-img-wrapper"
                data-index="1"
              >
                {% if block.settings.background_image_1 == blank %}
                  <img
                    src="https://cdn.shopify.com/s/files/1/0663/5887/0235/files/studded-flats_1000x.jpg"
                    alt="Placeholder image"
                    width="1500"
                    height="1500"
                    loading="lazy"
                  >
                {% else %}
                  {{ block.settings.background_image_1 | image_url: width: 1500 | image_tag: loading: 'lazy' }}
                {% endif %}
                <div class="psb-img__overlay"></div>
                <{{ block.settings.collection_heading_tag_1 }} class="psb-img__title psb-rte">
                  {{ block.settings.heading_1 }}
                </{{ block.settings.collection_heading_tag_1 }}>
              </{{ wrapper_1 }}>
            </div>
            <div class="psb-col-lg-6 image-column">
              <{{ wrapper_2 }}
                {%- if wrapper_2 == 'a' -%}
                  href="{{ block.settings.link_to_2 }}"
                {%- endif -%}
                class="psb-img-wrapper"
                data-index="2"
              >
                {% if block.settings.background_image_2 == blank %}
                  <img
                    src="https://cdn.shopify.com/s/files/1/0663/5887/0235/files/boots-on-blue_600x.jpg"
                    alt="Placeholder image"
                    width="1500"
                    height="1500"
                    loading="lazy"
                  >
                {% else %}
                  {{ block.settings.background_image_2 | image_url: width: 1500 | image_tag: loading: 'lazy' }}
                {% endif %}
                <div class="psb-img__overlay"></div>
                <{{ block.settings.collection_heading_tag_2 }} class="psb-img__title psb-rte">
                  {{ block.settings.heading_2 }}
                </{{ block.settings.collection_heading_tag_2 }}>
              </{{ wrapper_2 }}>
              <div class="psb-row">
                <div class="psb-col-6 image-column image-column--3">
                  <{{ wrapper_3 }}
                    {%- if wrapper_3 == 'a' -%}
                      href="{{ block.settings.link_to_3 }}"
                    {%- endif -%}
                    class="psb-img-wrapper"
                    data-index="3"
                  >
                    {% if block.settings.background_image_3 == blank %}
                      <img
                        src="https://cdn.shopify.com/s/files/1/0663/5887/0235/files/big-smiles-and-happy-woman_500x.jpg"
                        alt="Placeholder image"
                        width="1500"
                        height="1500"
                        loading="lazy"
                      >
                    {% else %}
                      {{ block.settings.background_image_3 | image_url: width: 1500 | image_tag: loading: 'lazy' }}
                    {% endif %}
                    <div class="psb-img__overlay"></div>
                  </{{ wrapper_3 }}>
                  <{{ block.settings.collection_heading_tag_3 }} class="psb-img__title psb-rte">
                    {{ block.settings.heading_3 }}
                  </{{ block.settings.collection_heading_tag_3 }}>
                </div>
                <div class="psb-col-6 image-column image-column--4">
                  <{{ wrapper_4 }}
                    {%- if wrapper_4 == 'a' -%}
                      href="{{ block.settings.link_to_4 }}"
                    {%- endif -%}
                    class="psb-img-wrapper"
                    data-index="4"
                  >
                    {% if block.settings.background_image_4 == blank %}
                      <img
                        src="https://cdn.shopify.com/s/files/1/0663/5887/0235/files/model-in-heels-and-overalls-with-blue_500x.jpg"
                        alt="Placeholder image"
                        width="1500"
                        height="1500"
                        loading="lazy"
                      >
                    {% else %}
                      {{ block.settings.background_image_4 | image_url: width: 1500 | image_tag: loading: 'lazy' }}
                    {% endif %}
                    <div class="psb-img__overlay"></div>
                  </{{ wrapper_4 }}>
                  <{{ block.settings.collection_heading_tag_4 }} class="psb-img__title psb-rte">
                    {{ block.settings.heading_4 }}
                  </{{ block.settings.collection_heading_tag_4 }}>
                </div>
              </div>
            </div>
          </div>
        {%- when 'heading' -%}
          <{{ block.settings.heading_tag }}
            class="psb-utilities-heading__heading psb-rte psb-block-space"
            style="--heading-color: {{ block.settings.heading_color }}"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.heading }}
          </{{ block.settings.heading_tag }}>
        {%- when 'subheading' -%}
          <div
            class="psb-utilities-heading__subheading psb-rte psb-block-space"
            style="--subheading-color: {{ block.settings.subheading_color }}"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.subheading }}
          </div>
        {% when 'divider' %}
          <div class="psb-divider-wrapper psb-block-space">
            <span class="psb-divider" style="--divider-color: {{ block.settings.divider_color }}" {{ block.shopify_attributes }}></span>
          </div>
        {% when 'buttons' %}
          <div class="psb-btn-wrapper psb-block-space" {{ block.shopify_attributes }}>
            <div class="psb-btn-group{% if block.settings.button_label_2 != blank %} psb-btn-group--two-btn{% endif %}">
              {% if block.settings.button_label_1 != blank %}
                <a
                  href="{{ block.settings.button_link_1 }}"
                  class="psb-btn{% if block.settings.button_is_rounded == true %} psb-btn-rounded{% endif %}{% if block.settings.button_is_outline == true %} psb-btn-outline{% endif %}"
                  style="
                    color: {{ block.settings.btn_color_1 }};
                    {% if block.settings.button_is_outline == true %}
                      background-color: transparent;
                      border: 2px solid {{ block.settings.btn_color_1 }};
                    {% else %}
                      background-color: {{ block.settings.btn_bg_1 }};
                    {% endif %}
                  "
                >
                  {{ block.settings.button_label_1 }}
                </a>
              {% endif %}
              {% if block.settings.button_label_2 != blank %}
                <a
                  href="{{ block.settings.button_link_2 }}"
                  class="psb-btn{% if block.settings.button_is_rounded == true %} psb-btn-rounded{% endif %}{% if block.settings.button_is_outline == true %} psb-btn-outline{% endif %}"
                  style="
                    color: {{ block.settings.btn_color_2 }};
                    {% if block.settings.button_is_outline == true %}
                      background-color: transparent;
                      border: 2px solid {{ block.settings.btn_color_2 }};
                    {% else %}
                      background-color: {{ block.settings.btn_bg_2 }};
                    {% endif %}
                  "
                >
                  {{ block.settings.button_label_2 }}
                </a>
              {% endif %}
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

