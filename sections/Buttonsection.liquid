
{% schema %}
{
  "name": "Custom Image Buttons",
  "settings": [
    {
      "type": "header",
      "content": "Add Clickable Image Buttons"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Explore Our Pages"
    },
    {
      "type": "paragraph",
      "content": "Customize up to six clickable image buttons with descriptive text."
    },
    {
      "type": "image_picker",
      "id": "button_image_1",
      "label": "Button 1 Image"
    },
    {
      "type": "text",
      "id": "button_text_1",
      "label": "Button 1 Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Button 1 Link"
    },
    {
      "type": "image_picker",
      "id": "button_image_2",
      "label": "Button 2 Image"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Button 2 Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button 2 Link"
    },
    {
      "type": "image_picker",
      "id": "button_image_3",
      "label": "Button 3 Image"
    },
    {
      "type": "text",
      "id": "button_text_3",
      "label": "Button 3 Text",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "button_link_3",
      "label": "Button 3 Link"
    },
    {
      "type": "image_picker",
      "id": "button_image_4",
      "label": "Button 4 Image"
    },
    {
      "type": "text",
      "id": "button_text_4",
      "label": "Button 4 Text",
      "default": "About Us"
    },
    {
      "type": "url",
      "id": "button_link_4",
      "label": "Button 4 Link"
    },
    {
      "type": "image_picker",
      "id": "button_image_5",
      "label": "Button 5 Image"
    },
    {
      "type": "text",
      "id": "button_text_5",
      "label": "Button 5 Text",
      "default": "Blog"
    },
    {
      "type": "url",
      "id": "button_link_5",
      "label": "Button 5 Link"
    },
    {
      "type": "image_picker",
      "id": "button_image_6",
      "label": "Button 6 Image"
    },
    {
      "type": "text",
      "id": "button_text_6",
      "label": "Button 6 Text",
      "default": "Gallery"
    },
    {
      "type": "url",
      "id": "button_link_6",
      "label": "Button 6 Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Image Buttons",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div class="custom-image-buttons-section">
  <h2>{{ section.settings.section_heading }}</h2>
  <div class="buttons">
    {% if section.settings.button_link_1 %}
      <div class="button-wrapper">
        <a href="{{ section.settings.button_link_1 }}" class="image-button">
          {% if section.settings.button_image_1 %}
            <img src="{{ section.settings.button_image_1 | img_url: 'medium' }}" alt="{{ section.settings.button_text_1 }}">
          {% endif %}
          <p>{{ section.settings.button_text_1 }}</p>
        </a>
      </div>
    {% endif %}
    {% if section.settings.button_link_2 %}
      <div class="button-wrapper">
        <a href="{{ section.settings.button_link_2 }}" class="image-button">
          {% if section.settings.button_image_2 %}
            <img src="{{ section.settings.button_image_2 | img_url: 'medium' }}" alt="{{ section.settings.button_text_2 }}">
          {% endif %}
          <p>{{ section.settings.button_text_2 }}</p>
        </a>
      </div>
    {% endif %}
