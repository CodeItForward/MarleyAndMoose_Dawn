        <a href="{{ section.settings.button_link_3 }}" class="image-button">
          {% if section.settings.button_image_3 %}
            <img src="{{ section.settings.button_image_3 | img_url: 'medium' }}" alt="{{ section.settings.button_text_3 }}">
          {% endif %}
          <p>{{ section.settings.button_text_3 }}</p>
        </a>
      </div>
    {% endif %}
    {% if section.settings.button_link_4 %}
      <div class="button-wrapper">
        <a href="{{ section.settings.button_link_4 }}" class="image-button">
          {% if section.settings.button_image_4 %}
            <img src="{{ section.settings.button_image_4 | img_url: 'medium' }}" alt="{{ section.settings.button_text_4 }}">
          {% endif %}
          <p>{{ section.settings.button_text_4 }}</p>
        </a>
      </div>
    {% endif %}
    {% if section.settings.button_link_5 %}
