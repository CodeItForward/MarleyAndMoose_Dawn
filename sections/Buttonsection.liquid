        <a href="{{ section.settings.button_link_5 }}" class="image-button">
          {% if section.settings.button_image_5 %}
            <img src="{{ section.settings.button_image_5 | img_url: 'medium' }}" alt="{{ section.settings.button_text_5 }}">
          {% endif %}
          <p>{{ section.settings.button_text_5 }}</p>
