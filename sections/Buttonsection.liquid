    {% endif %}
  </div>
</div>

<style>
.custom-image-buttons-section {
  text-align: center;
  padding: 10px;
}

.custom-image-buttons-section h2 {
  margin-bottom: 20px;
  text-align: center;
  font-size: 3.5rem;
  font-weight: 300;
  margin-bottom: 0px;
  margin-top: 0px;
  padding-top: 3px;
  padding-bottom: 25px;
  background-color: #;
}

.custom-image-buttons-section .buttons {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.custom-image-buttons-section .button-wrapper {
  text-align: center;
  width: 200px;
}

.custom-image-buttons-section .image-button {
  display: block;
  text-decoration: none;
  color: #000;
}

.custom-image-buttons-section .image-button img {
  width: 165px; /* Set a fixed width */
  height: 165px; /* Set a fixed height */
  border-radius: 50%; /* Make the image circular */
  object-fit: cover; /* Ensure the image fits within the circle */
  transition: transform 0.3s ease;
}

.custom-image-buttons-section .image-button p {
  margin-top: 10px;
  font-size: 16px;
  font-weight: normal;
}

.custom-image-buttons-section .image-button:hover img {
  transform: scale(1.05);
}
</style>

